# vi: ft=zsh
fpath=(
  ${HOME}/.zcustom
  ${fpath}
)

zstyle ':prezto:load' pmodule-dirs $HOME/.zcontrib
zstyle ':prezto:load' pmodule \
  'environment' \
  'autosuggestions' \
  'directory' \
  'fzf-tab' \
  'git' \
  'history' \
  'utility' \
  'completion' \
  'syntax-highlighting' \
  'prompt'

zstyle ':prezto:module:autosuggestions' color 'yes'
zstyle ':prezto:module:git:info' verbose 'yes'
zstyle ':prezto:module:prompt' theme 'peepcode'
zstyle ':prezto:module:syntax-highlighting' color 'yes'
zstyle ':prezto:module:utility:*' color 'yes'
